{
    "include": [
        "src/**/*.ts",
        "src/**/*.json"
    ],
    "compilerOptions": {
        "target": "es2019",
        "lib": [
            "esnext"
        ],
        "module": "es2020",
        "moduleResolution": "nodenext",
        "baseUrl": "./",
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types",
            "src/@types"
        ]
    },
    "ts-node": {
        "esm": true,
        "files": true
    }
}